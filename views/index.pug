extends layout

block content
  #wrapper
    header#header
      .logo(style="background-image: url(" + imageAlbum + ")")
      .content
        .inner
          h1= title
          p= artist
          if artist != 'Your spotify is offline'
            ul.icons
              li
                a(href='#')#prev.icon.fa-step-backward
              li
                a(href='#')#pause.icon.fa-pause
              li
                a(href='#')#next.icon.fa-step-forward
      nav
        ul
          if lyrics != '?'
            li
              a(href='#lyrics') Lyrics
          else
            li
              a(href='.').icon.fa-refresh
          if description != '?'
            li
              a(href='#description') Desc
            //- li
            //-   a(href='#work') Work
            //- li
            //-   a(href='#about') About
            //- li
            //-   a(href='#contact') Contact
    #main
      article#lyrics
        h2.major Lyrics
        span.image.main
          img(src=imageAlbum style="width:150px")
        p(style="white-space: pre-line")!= lyrics
      article#description
        h2.major Description
        p(style="white-space: pre-line")!= description
