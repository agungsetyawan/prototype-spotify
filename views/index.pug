    var w = window.innerWidth;
    var center_y = h * 0.5, center_x = w * 0.5;
    var points = [];
    var spacing = 20;
    var t = 0;
    // generate a sine wave of points
    for(var x = spacing; x < w - (spacing*2); x += spacing) {
    var y = center_y + Math.sin(t) * (center_y - spacing);
    points.push([x, y]);
    t += 0.5;
    }
